<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/input_border" />
            <stroke
                android:width="1dp"
                android:color="@color/social_button_border" />
        </shape>
    </item>
    <!-- Normal State -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/social_button_background" />
            <stroke
                android:width="1dp"
                android:color="@color/social_button_border" />
        </shape>
    </item>
</selector>