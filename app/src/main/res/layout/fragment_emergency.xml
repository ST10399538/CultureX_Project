                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FEE2E2"
                app:strokeWidth="2dp"
                app:strokeColor="#FCA5A5">

