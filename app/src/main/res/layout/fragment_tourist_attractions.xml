<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_purple_background"
        android:paddingTop="40dp"
        android:paddingBottom="16dp">

        <!-- Title Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tourist Attractions"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center" />

            <View
                android:layout_width="32dp"
                android:layout_height="32dp" />
        </LinearLayout>

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/search_background"
            android:layout_marginHorizontal="16dp"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                app:tint="#6B7280"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/search_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search attractions..."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textColorHint="#9CA3AF"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:imeOptions="actionSearch" />

            <ImageView
                android:id="@+id/clear_search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                app:tint="#6B7280"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Location Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location"
                app:tint="@android:color/white"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/location_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Getting your location..."
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Map View - UPDATED -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/header" />

    <!-- Attractions List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/map_view"
        android:orientation="vertical">

        <!-- List Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nearby Attractions"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/sort_button"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Sort by Distance"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_primary_background"
                android:paddingHorizontal="12dp" />
        </LinearLayout>

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/loading_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:visibility="gone" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_search"
                app:tint="#D1D5DB"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/empty_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No attractions found"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Attractions RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/attractions_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="16dp" />
    </LinearLayout>
</RelativeLayout>

