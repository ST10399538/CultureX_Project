<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- Header Section with Gradient -->
            <RelativeLayout
                android:id="@+id/header_section"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/gradient_purple_background">

                <!-- Top Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#80FFFFFF">

                        <ImageView
                            android:id="@+id/back_arrow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:src="@drawable/ic_arrow_back"
                            app:tint="@android:color/white"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackgroundBorderless" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"
                        android:text="Edit Profile"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                </LinearLayout>

                <!-- Profile Image Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Profile Image with Edit Icon -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="60dp"
                            app:cardElevation="8dp">

                            <ImageView
                                android:id="@+id/profile_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_profile_placeholder"
                                android:scaleType="centerCrop"
                                android:background="#E5E7EB" />
                        </com.google.android.material.card.MaterialCardView>


                    </FrameLayout>

                    <!-- Change Picture Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/change_picture_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Change Picture"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:paddingHorizontal="24dp"
                        android:fontFamily="sans-serif-medium"
                        app:cornerRadius="20dp"
                        app:strokeColor="@android:color/white"
                        app:strokeWidth="2dp"
                        app:backgroundTint="@android:color/transparent"
                        style="@style/Widget.Material3.Button.OutlinedButton" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Form Section Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="-30dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Name Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="#1F2937"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeColor="#E5E7EB"
                        app:boxBackgroundColor="#F9FAFB"
                        app:hintEnabled="false"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/name_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#1F2937"
                            android:textSize="15sp"
                            android:hint="Enter your name"
                            android:textColorHint="#9CA3AF"
                            android:padding="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Surname Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Surname"
                        android:textColor="#1F2937"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeColor="#E5E7EB"
                        app:boxBackgroundColor="#F9FAFB"
                        app:hintEnabled="false"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/surname_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#1F2937"
                            android:textSize="15sp"
                            android:hint="Enter your surname"
                            android:textColorHint="#9CA3AF"
                            android:padding="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="#1F2937"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeColor="#E5E7EB"
                        app:boxBackgroundColor="#F9FAFB"
                        app:hintEnabled="false"
                        app:startIconTint="#9CA3AF"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#1F2937"
                            android:textSize="15sp"
                            android:hint="example@email.com"
                            android:textColorHint="#9CA3AF"
                            android:inputType="textEmailAddress"
                            android:padding="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Phone Number Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textColor="#1F2937"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Country Code Dropdown -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:layout_marginEnd="12dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeColor="#E5E7EB"
                            app:strokeWidth="2dp"
                            app:cardBackgroundColor="#F9FAFB">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="16dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/france"
                                    android:scaleType="fitCenter"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+27"
                                    android:textColor="#1F2937"
                                    android:textSize="15sp"
                                    android:fontFamily="sans-serif-medium" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_arrow_drop_down"
                                    app:tint="#6B7280"
                                    android:layout_marginStart="4dp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Phone Number Input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:boxStrokeWidth="2dp"
                            app:boxStrokeColor="#E5E7EB"
                            app:boxBackgroundColor="#F9FAFB"
                            app:hintEnabled="false"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/phone_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#1F2937"
                                android:textSize="15sp"
                                android:hint="XX XXX XXXX"
                                android:textColorHint="#9CA3AF"
                                android:inputType="phone"
                                android:padding="16dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Additional Info Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:text="Your personal information is secure and will not be shared with third parties."
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:gravity="center"
                android:lineSpacingExtra="2dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Update Button (Fixed at bottom) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/update_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:text="Update Profile"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cornerRadius="16dp"
        app:elevation="4dp"
        app:backgroundTint="#6366F1"
        style="@style/Widget.Material3.Button" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>

