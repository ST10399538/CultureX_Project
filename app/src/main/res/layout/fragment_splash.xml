<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5">

    <!-- Background with subtle gradient -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_gradient_background" />

    <!-- Loading text at top -->
    <TextView
        android:id="@+id/loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load app"
        android:textColor="#9CA3AF"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- Status bar info -->
    <LinearLayout
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:41"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_signal"
            app:tint="@android:color/black"
            android:layout_marginEnd="4dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_wifi"
            app:tint="@android:color/black"
            android:layout_marginEnd="4dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_battery"
            app:tint="@android:color/black" />
    </LinearLayout>

    <!-- Main Logo Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/logo_card"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white">

        <!-- Overlay container for logo + pins -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Card background image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/culturex" />

            <!-- Globe icon centered -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_globe"
                app:tint="#4CAF50" />

            <!-- Pin 1 -->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_location_pin"
                app:tint="#FF5722" />

            <!-- Pin 2 -->
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_location_pin"
                app:tint="#2196F3" />

            <!-- Pin 3 -->
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="18dp"
                android:src="@drawable/ic_location_pin"
                app:tint="#FF9800" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- App Name under the card -->
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Culturex"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@id/logo_card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />
</RelativeLayout>
