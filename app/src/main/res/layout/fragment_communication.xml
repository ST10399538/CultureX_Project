<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Custom App Bar with Enhanced Design -->
    <LinearLayout
        android:id="@+id/custom_app_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="8dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <!-- Back Button with Enhanced Design -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/back_arrow"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_arrow_back"
                app:iconTint="#374151"
                app:cornerRadius="24dp"
                android:backgroundTint="#FFFFFF"
                app:strokeWidth="0dp"
                app:elevation="6dp"
                android:stateListAnimator="@null" />

            <!-- Title with Better Typography -->
            <TextView
                android:id="@+id/content_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/content_title"
                android:textColor="#111827"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:layout_marginHorizontal="8dp"
                android:letterSpacing="0.01" />

            <!-- Options Menu with Better Styling -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/options_menu"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_menu"
                app:iconTint="#6B7280"
                app:cornerRadius="24dp"
                android:backgroundTint="#F3F4F6"
                app:strokeWidth="0dp"
                app:elevation="2dp" />

        </LinearLayout>

        <!-- Animated Progress Bar -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/page_progress"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:indeterminate="false"
            android:progress="0"
            app:indicatorColor="#6366F1"
            app:trackColor="#E5E7EB"
            app:trackCornerRadius="2dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Main Content ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/custom_app_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Enhanced Interactive Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="12dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bottom_nav_background"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/interactive_card_emoji"
                        android:textSize="56sp"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/interactive_card_title"
                        android:textColor="@android:color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/interactive_card_subtitle"
                        android:textColor="#5F6368"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:gravity="center" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Enhanced Quick Stats Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="24dp">

                <!-- Do's Card with Enhanced Design -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#c7edd9"
                    app:strokeWidth="2dp"
                    app:strokeColor="#86EFAC">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dos_emoji"
                            android:textSize="28sp" />

                        <TextView
                            android:id="@+id/dos_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dos_count"
                            android:textColor="#065F46"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Don'ts Card with Enhanced Design -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#FEE2E2"
                    app:strokeWidth="2dp"
                    app:strokeColor="#FCA5A5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/donts_emoji"
                            android:textSize="28sp" />

                        <TextView
                            android:id="@+id/donts_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/donts_count"
                            android:textColor="#991B1B"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Examples Card with Enhanced Design -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#DBEAFE"
                    app:strokeWidth="2dp"
                    app:strokeColor="#93C5FD">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/examples_emoji"
                            android:textSize="28sp" />

                        <TextView
                            android:id="@+id/examples_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/examples_count"
                            android:textColor="#1E40AF"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Enhanced Description Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Icon Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="4dp"
                            android:layout_marginEnd="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradient_background"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ“–"
                                    android:textSize="20sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/overview"
                            android:textColor="#1F2937"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/content_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/content_description"
                        android:textColor="#4B5563"
                        android:textSize="15sp"
                        android:lineSpacingExtra="6dp"
                        android:lineSpacingMultiplier="1.3" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Enhanced Do's Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="5dp"
                    android:layout_height="28dp"
                    android:background="@drawable/bottom_nav_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recommended_practices"
                    android:textColor="#065F46"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#ECFDF5"
                app:strokeWidth="2dp"
                app:strokeColor="#86EFAC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/dos_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:clipToPadding="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Enhanced Don'ts Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="5dp"
                    android:layout_height="28dp"
                    android:background="@drawable/bottom_nav_gradient" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/common_mistakes"
                    android:textColor="#991B1B"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#FEF2F2"
                app:strokeWidth="2dp"
                app:strokeColor="#FCA5A5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/donts_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:clipToPadding="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Enhanced Examples Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="5dp"
                    android:layout_height="28dp"
                    android:background="@drawable/bottom_nav_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/real_world_scenarios"
                    android:textColor="#1E3A8A"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#EFF6FF"
                app:strokeWidth="2dp"
                app:strokeColor="#93C5FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/examples_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:clipToPadding="false"
                        android:paddingBottom="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Enhanced Progress Bar Overlay -->
    <FrameLayout
        android:id="@+id/progress_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#99000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:elevation="20dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@style/Widget.Material3.CircularProgressIndicator.Medium"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:indeterminateTint="#6366F1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
