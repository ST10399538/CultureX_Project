<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <!-- Main Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="80dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section with Gradient -->
            <RelativeLayout
                android:id="@+id/header_section"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/gradient_purple_background"
                android:paddingTop="24dp"
                android:paddingBottom="40dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center">


                    <!-- Profile Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp"
                        android:alpha="0.9" />

                    <!-- Profile Image with Shadow -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="60dp"
                        app:cardElevation="8dp"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_profile_placeholder"
                            android:scaleType="centerCrop"
                            android:background="#E5E7EB" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Edit Profile Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/edit_profile_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Edit Profile"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:paddingHorizontal="24dp"
                        android:fontFamily="sans-serif-medium"
                        app:cornerRadius="20dp"
                        app:strokeColor="@android:color/white"
                        app:strokeWidth="2dp"
                        app:backgroundTint="@android:color/transparent"
                        style="@style/Widget.Material3.Button.OutlinedButton" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Content Section with Cards -->
            <LinearLayout
                android:id="@+id/content_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:layout_marginTop="-20dp">

                <!-- Content Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Content Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Content"
                            android:textColor="#1F2937"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="20dp" />

                        <!-- Download Option -->
                        <LinearLayout
                            android:id="@+id/download_option"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="16dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackground">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#EEF2FF">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_download"
                                    app:tint="#6366F1" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:text="Download"
                                android:textColor="#374151"
                                android:textSize="15sp"
                                android:fontFamily="sans-serif-medium" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_arrow_back"
                                app:tint="#9CA3AF" />
                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F3F4F6"
                            android:layout_marginVertical="4dp" />

                        <!-- Settings Option -->
                        <LinearLayout
                            android:id="@+id/settings_option"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="16dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackground">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#FEF3C7">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_settings"
                                    app:tint="#F59E0B" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:text="Settings"
                                android:textColor="#374151"
                                android:textSize="15sp"
                                android:fontFamily="sans-serif-medium" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_arrow_back"
                                app:tint="#9CA3AF" />
                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F3F4F6"
                            android:layout_marginVertical="4dp" />

                        <!-- Itinerary Option -->
                        <LinearLayout
                            android:id="@+id/itinerary_option"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="16dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackground">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#DBEAFE">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_itinerary"
                                    app:tint="#3B82F6" />
                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Itinerary Plans"
                                    android:textColor="#374151"
                                    android:textSize="15sp"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View and edit your trips"
                                    android:textColor="#9CA3AF"
                                    android:textSize="12sp"
                                    android:layout_marginTop="2dp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_arrow_back"
                                app:tint="#9CA3AF" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Sign Out Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/sign_out_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Sign Out Option -->
                        <LinearLayout
                            android:id="@+id/sign_out_option"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackground">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="#FEE2E2">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_sign_out"
                                    app:tint="#EF4444" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:text="Sign Out"
                                android:textColor="#EF4444"
                                android:textSize="15sp"
                                android:fontFamily="sans-serif-medium" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_arrow_back"
                                app:tint="#EF4444" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_nav_background"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:elevation="8dp">

        <!-- Emergency -->
        <LinearLayout
            android:id="@+id/nav_emergency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_emergency"
                app:tint="#EF4444"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency"
                android:textColor="#EF4444"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Home -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="#6B7280"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#6B7280"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Saved -->
        <LinearLayout
            android:id="@+id/nav_saved"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_bookmark"
                app:tint="#6B7280"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saved"
                android:textColor="#6B7280"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Notifications -->
        <LinearLayout
            android:id="@+id/nav_notifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notifications"
                app:tint="#6B7280"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textColor="#6B7280"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

