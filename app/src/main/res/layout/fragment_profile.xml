<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_purple_background">

    <!-- Header Section with Profile Image -->
    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="40dp">

        <!-- Profile Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="20dp" />

        <!-- Profile Image Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_profile_placeholder"
                android:scaleType="centerCrop"
                android:background="#E5E7EB" />
        </androidx.cardview.widget.CardView>

        <!-- Edit Profile Button -->
        <Button
            android:id="@+id/edit_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Edit Profile"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:background="@drawable/edit_profile_button_background"
            android:paddingHorizontal="16dp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Content Section -->
    <LinearLayout
        android:id="@+id/content_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_section"
        android:layout_above="@id/sign_out_section"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="24dp">

        <!-- Content Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="24dp" />

        <!-- Download Option -->
        <LinearLayout
            android:id="@+id/download_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_download"
                app:tint="#6B7280"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Download"
                android:textColor="#374151"
                android:textSize="14sp" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/orange_dot" />
        </LinearLayout>

        <!-- Settings Option -->
        <LinearLayout
            android:id="@+id/settings_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"
                app:tint="#6B7280"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Settings"
                android:textColor="#374151"
                android:textSize="14sp" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/orange_dot" />
        </LinearLayout>

        <!-- Add View/Edit Itinerary Plans Option -->
        <LinearLayout
            android:id="@+id/itinerary_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_itinerary"
                app:tint="#6B7280"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add View/Edit Itinerary Plans"
                android:textColor="#374151"
                android:textSize="14sp" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/orange_dot" />
        </LinearLayout>
    </LinearLayout>

    <!-- Sign Out Section -->
    <LinearLayout
        android:id="@+id/sign_out_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_nav"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:paddingHorizontal="24dp"
        android:paddingBottom="24dp">

        <!-- Pink Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E91E63"
            android:layout_marginBottom="24dp" />

        <!-- Sign Out Option -->
        <LinearLayout
            android:id="@+id/sign_out_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sign_out"
                app:tint="#6B7280"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sign Out"
                android:textColor="#374151"
                android:textSize="14sp" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/orange_dot" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_nav_background"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:elevation="8dp">

        <!-- Emergency -->
        <LinearLayout
            android:id="@+id/nav_emergency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_emergency"
                app:tint="#EF4444"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency"
                android:textColor="#EF4444"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Home -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="#6B7280"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#6B7280"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Saved -->
        <LinearLayout
            android:id="@+id/nav_saved"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_bookmark"
                app:tint="#6B7280"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saved"
                android:textColor="#6B7280"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Notifications -->
        <LinearLayout
            android:id="@+id/nav_notifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notifications"
                app:tint="#6B7280"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textColor="#6B7280"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>