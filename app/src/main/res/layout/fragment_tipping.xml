<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <!-- Enhanced Top Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:id="@+id/top_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp">

                <!-- Animated Back Button -->
                <FrameLayout
                    android:id="@+id/back_arrow"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/ic_globe"
                    android:backgroundTint="@color/white"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_back"
                        app:tint="#1F2937" />
                </FrameLayout>

                <!-- Title Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="12dp">

                    <TextView
                        android:id="@+id/content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipping Culture"
                        android:textColor="#111827"
                        android:textSize="20sp"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/country_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country"
                        android:textColor="#6B7280"
                        android:textSize="18sp"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!-- Favorite Button -->
                <FrameLayout
                    android:id="@+id/favorite_button"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/ic_globe"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/favorite_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_bookmark"
                        app:tint="#EF4444" />
                </FrameLayout>
            </LinearLayout>

            <!-- Tab Indicators -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingBottom="8dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_globe"
                    android:backgroundTint="#10B981"
                    android:layout_marginEnd="8dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_globe"
                    android:backgroundTint="#F59E0B"
                    android:layout_marginHorizontal="8dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_globe"
                    android:backgroundTint="#3B82F6"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Main Content Area -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="100dp">

            <!-- Hero Card with Tipping Calculator -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bottom_nav_background"
                    android:backgroundTint="#990000"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’° Quick Tip Calculator"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter bill amount"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/bill_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:inputType="numberDecimal"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tip_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tip: R0.00      |     Total: R0.00"
                        android:textColor="@android:color/white"
                        android:textSize="19sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tip_10"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="10%"
                            android:textColor="#1F2937"
                            android:backgroundTint="#F3F4F6"
                            app:cornerRadius="12dp"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tip_15"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="15%"
                            android:textColor="#1F2937"
                            android:backgroundTint="#F3F4F6"
                            app:cornerRadius="12dp"
                            android:layout_marginHorizontal="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tip_20"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="20%"
                            android:textColor="#1F2937"
                            android:backgroundTint="#F3F4F6"
                            app:cornerRadius="12dp"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons Row -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/save_offline_chip"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save Offline"
                        app:chipIcon="@drawable/ic_download"
                        app:chipIconTint="#6366F1"
                        app:chipBackgroundColor="#EEF2FF"
                        app:chipStrokeColor="#6366F1"
                        app:chipStrokeWidth="1dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/share_chip"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share"
                        app:chipIcon="@drawable/ic_export"
                        app:chipIconTint="#10B981"
                        app:chipBackgroundColor="#F0FDF4"
                        app:chipStrokeColor="#10B981"
                        app:chipStrokeWidth="1dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/translate_chip"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Translate"
                        app:chipIcon="@drawable/ic_search"
                        app:chipIconTint="#F59E0B"
                        app:chipBackgroundColor="#FEF3C7"
                        app:chipStrokeColor="#F59E0B"
                        app:chipStrokeWidth="1dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Content Description Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E7EB">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_itinerary"
                            app:tint="#6366F1"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipping Guidelines"
                            android:textColor="#1F2937"
                            android:textSize="16sp"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/content_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading tipping information..."
                        android:textColor="#4B5563"
                        android:textSize="14sp"
                        android:lineSpacingExtra="6dp"
                         />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Do's Section with Icons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="When to Tip"
                android:textColor="#059669"
                android:textSize="17sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="12dp"
                android:drawableStart="@drawable/ic_globe"
                android:drawablePadding="8dp"
                app:drawableTint="#059669" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dos_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                android:nestedScrollingEnabled="false" />

            <!-- Don'ts Section with Icons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="When Not to Tip"
                android:textColor="#DC2626"
                android:textSize="17sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="12dp"
                android:drawableStart="@drawable/ic_globe"
                android:drawablePadding="8dp"
                app:drawableTint="#DC2626" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/donts_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                android:nestedScrollingEnabled="false" />

            <!-- Examples Section with Icons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipping Scenarios"
                android:textColor="#1E40AF"
                android:textSize="17sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="12dp"
                android:drawableStart="@drawable/ic_light_mode"
                android:drawablePadding="8dp"
                app:drawableTint="#3B82F6" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/examples_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Progress Indicator -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="#6366F1"
        android:visibility="gone" />

    <!-- Modern Bottom Navigation Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_navigation_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:background="@drawable/bottom_nav_gradient"
            android:paddingHorizontal="8dp">

            <!-- Emergency -->
            <LinearLayout
                android:id="@+id/nav_emergency"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_emergency"
                    app:tint="#DC3545" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOS"
                    android:textColor="#DC3545"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Home -->
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    app:tint="#6366F1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="#6366F1"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Saved -->
            <LinearLayout
                android:id="@+id/nav_saved"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bookmark"
                    app:tint="#45818e" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saved"
                    android:textColor="#45818e"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Profile -->
            <LinearLayout
                android:id="@+id/nav_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_shield"
                    app:tint="#9CA3AF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="#9CA3AF"
                    android:textSize="11sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Back to Home Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_to_home_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:layout_margin="16dp"
        android:text="Back to Home"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:cornerRadius="28dp"
        app:icon="@drawable/ic_home"
        app:iconTint="@android:color/white"
        app:iconPadding="12dp"
        app:backgroundTint="#b45f06"
        app:rippleColor="#6366F1" />

</LinearLayout>