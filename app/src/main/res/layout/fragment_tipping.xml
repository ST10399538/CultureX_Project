<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <!-- Enhanced Top Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:id="@+id/top_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp">

                <FrameLayout
                    android:id="@+id/back_arrow"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/ic_globe"
                    android:backgroundTint="@color/white"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_back"
                        app:tint="#1F2937" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="12dp">

                    <TextView
                        android:id="@+id/content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/content_title_tip"
                        android:textColor="#111827"
                        android:textSize="20sp"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/country_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/country_name"
                        android:textColor="#6B7280"
                        android:textSize="14sp"
                        android:layout_gravity="center" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/favorite_button"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/ic_globe"
                    android:backgroundTint="@color/white"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/favorite_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_bookmark"
                        app:tint="#6B7280" />
                </FrameLayout>
            </LinearLayout>

            <!-- Progress Indicators -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingBottom="8dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_globe"
                    android:backgroundTint="#10B981"
                    android:layout_marginEnd="8dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_globe"
                    android:backgroundTint="#F59E0B"
                    android:layout_marginHorizontal="8dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_globe"
                    android:backgroundTint="#3B82F6"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Main Content Area -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="100dp">

            <!-- Tipping Calculator Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bottom_nav_background"
                    android:backgroundTint="#000000"
                    android:padding="20dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/quick_tip_calculator"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/recommended_tip_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/recommended_tip"
                            android:textColor="#B0E0E6"
                            android:textSize="19sp"
                            android:background="@drawable/ic_globe"
                            android:backgroundTint="#20FFFFFF"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp" />
                    </LinearLayout>

                    <!-- Bill Amount Input -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#20FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/currency_symbol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/currency_symbol"
                                android:textColor="@android:color/white"
                                android:textSize="26sp"
                                android:layout_marginEnd="12dp" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/bill_input"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:hint="@string/enter_bill_amount"
                                android:textColorHint="#80FFFFFF"
                                android:textColor="@android:color/white"
                                android:textSize="20sp"
                                android:inputType="numberDecimal"
                                android:singleLine="true" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/clear_button"
                                style="@style/Widget.Material3.Button.IconButton"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                app:icon="@drawable/ic_back_arrow"
                                app:iconTint="@android:color/white"
                                app:iconSize="20dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Split Bill Option -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#10FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_globe"
                                app:tint="@android:color/white"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/split_between"
                                android:textColor="#E0E0E0"
                                android:textSize="14sp" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/split_input"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bottom_nav_background"
                                android:backgroundTint="#20FFFFFF"
                                android:hint="@string/split_hint"
                                android:gravity="center"
                                android:textColorHint="@color/white"
                                android:textColor="@android:color/white"
                                android:textSize="18sp"
                                android:inputType="number"
                                android:padding="8dp"
                                android:singleLine="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/people"
                                android:textColor="#E0E0E0"
                                android:textSize="18sp"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Save / Share / Offline Chips -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/save_offline_chip"
                            style="@style/Widget.Material3.Chip.Assist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/save"
                            app:chipIcon="@drawable/ic_bookmark"
                            app:chipIconTint="@android:color/white"
                            android:textColor="@android:color/white"
                            app:chipStrokeColor="@android:color/white"
                            app:chipStrokeWidth="1dp"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/share_chip"
                            style="@style/Widget.Material3.Chip.Assist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/share"
                            app:chipIcon="@drawable/ic_share"
                            app:chipIconTint="@android:color/white"
                            android:textColor="@android:color/white"
                            app:chipStrokeColor="@android:color/white"
                            app:chipStrokeWidth="1dp"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/offline_chip"
                            style="@style/Widget.Material3.Chip.Assist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/offline"
                            app:chipIcon="@drawable/ic_download"
                            app:chipIconTint="@android:color/white"
                            android:textColor="@android:color/white"
                            app:chipStrokeColor="@android:color/white"
                            app:chipStrokeWidth="1dp" />
                    </LinearLayout>

                    <!-- Translation Chip -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/translate_chip"
                            style="@style/Widget.Material3.Chip.Assist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/translate"
                            app:chipIconTint="@android:color/white"
                            android:textColor="@android:color/white"
                            app:chipStrokeColor="@android:color/white"
                            app:chipStrokeWidth="1dp" />
                    </LinearLayout>

                    <!-- Tip Results Display -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:id="@+id/tip_amount_display"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tip_amount"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:paddingVertical="6dp" />

                        <TextView
                            android:id="@+id/total_amount_display"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/total_with_tip"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:paddingVertical="6dp" />

                        <TextView
                            android:id="@+id/per_person_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/per_person"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:paddingVertical="6dp" />

                        <!-- Percentage Indicator -->
                        <ProgressBar
                            android:id="@+id/percentage_indicator"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:progress="0"
                            android:progressTint="#10B981"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="6dp" />
                    </LinearLayout>

                    <!-- Tip Percentage Buttons -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_tip_percentage"
                        android:textColor="#E0E0E0"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tip_10"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="@string/tip_10"
                            android:textSize="16sp"
                            android:textColor="#1F2937"
                            android:backgroundTint="@android:color/white"
                            app:cornerRadius="14dp"
                            android:layout_marginEnd="6dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tip_15"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="@string/tip_15"
                            android:textSize="16sp"
                            android:textColor="#1F2937"
                            android:backgroundTint="@android:color/white"
                            app:cornerRadius="14dp"
                            android:layout_marginHorizontal="6dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tip_20"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="@string/tip_20"
                            android:textSize="16sp"
                            android:textColor="#1F2937"
                            android:backgroundTint="@android:color/white"
                            app:cornerRadius="14dp"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                    <!-- Custom Tip Input -->
                    <LinearLayout
                        android:id="@+id/custom_tip_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/custom_tip_input"
                            android:layout_width="80dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bottom_nav_background"
                            android:backgroundTint="#20FFFFFF"
                            android:hint="@string/custom_hint"
                            android:gravity="center"
                            android:textColorHint="@color/white"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:inputType="number"
                            android:padding="8dp"
                            android:singleLine="true"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/percent_symbol"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:layout_marginEnd="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tip_custom"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="@string/app_custom"
                            android:textSize="13sp"
                            android:textColor="#1F2937"
                            android:backgroundTint="@android:color/white"
                            app:cornerRadius="14dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
