<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <!-- Enhanced Top Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:id="@+id/top_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/back_arrow"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#F3F4F6"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_arrow_back"
                        app:tint="#374151" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="16dp">

                    <TextView
                        android:id="@+id/content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipping Culture"
                        android:textColor="#111827"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/country_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country"
                        android:textColor="#6B7280"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/favorite_button"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#F3F4F6"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/favorite_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_bookmark"
                        app:tint="#6B7280" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Enhanced Progress Indicators -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="12dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_nav_background"
                    android:backgroundTint="#10B981"
                    android:layout_marginEnd="6dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_nav_background"
                    android:backgroundTint="#F59E0B"
                    android:layout_marginHorizontal="6dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_nav_background"
                    android:backgroundTint="#3B82F6"
                    android:layout_marginStart="6dp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Main Content Area -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="24dp">

            <!-- Tipping Calculator Card (KEEP AS IS FROM ORIGINAL) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bottom_nav_background"
                    android:backgroundTint="#000000"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/quick_tip_calculator"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/recommended_tip_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/recommended_tip"
                            android:textColor="#B0E0E6"
                            android:textSize="19sp"
                            android:background="@drawable/ic_globe"
                            android:backgroundTint="#20FFFFFF"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp" />
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#20FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/currency_symbol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$"
                                android:textColor="@android:color/white"
                                android:textSize="26sp"
                                android:layout_marginEnd="12dp" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/bill_input"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:hint="@string/bill_hint"
                                android:textColorHint="#80FFFFFF"
                                android:textColor="@android:color/white"
                                android:textSize="20sp"
                                android:inputType="numberDecimal"
                                android:singleLine="true" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/clear_button"
                                style="@style/Widget.Material3.Button.IconButton"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                app:icon="@drawable/ic_back_arrow"
                                app:iconTint="@android:color/white"
                                app:iconSize="20dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#10FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_globe"
                                app:tint="@android:color/white"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/split_hint"
                                android:textColor="#E0E0E0"
                                android:textSize="14sp" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/split_input"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bottom_nav_background"
                                android:backgroundTint="#20FFFFFF"
                                android:hint="1"
                                android:gravity="center"
                                android:textColorHint="@color/white"
                                android:textColor="@android:color/white"
                                android:textSize="18sp"
                                android:inputType="number"
                                android:padding="8dp"
                                android:singleLine="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/people"
                                android:textColor="#E0E0E0"
                                android:textSize="18sp"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_tip_percentage"
                        android:textColor="#E0E0E0"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tip_10"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="@string/tip_10"
                            android:textSize="16sp"
                            android:textColor="#1F2937"
                            android:backgroundTint="@android:color/white"
                            app:cornerRadius="14dp"
                            android:layout_marginEnd="6dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tip_15"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="@string/tip_15"
                            android:textSize="16sp"
                            android:textColor="#1F2937"
                            android:backgroundTint="@android:color/white"
                            app:cornerRadius="14dp"
                            android:layout_marginHorizontal="6dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tip_20"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="@string/tip_20"
                            android:textSize="16sp"
                            android:textColor="#1F2937"
                            android:backgroundTint="@android:color/white"
                            app:cornerRadius="14dp"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/custom_tip_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/custom_tip_input"
                            android:layout_width="80dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bottom_nav_background"
                            android:backgroundTint="#20FFFFFF"
                            android:hint="@string/app_custom"
                            android:gravity="center"
                            android:textColorHint="@color/white"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:inputType="number"
                            android:padding="8dp"
                            android:singleLine="true"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:layout_marginEnd="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tip_custom"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="@string/apply_custom_tip"
                            android:textSize="13sp"
                            android:textColor="@android:color/white"
                            app:strokeColor="@android:color/white"
                            app:strokeWidth="1dp"
                            app:cornerRadius="12dp" />
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/tip_amount"
                                    android:textColor="#6B7280"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tip_amount_display"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$0.00"
                                    android:textColor="#059669"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/percentage_indicator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15%"
                                    android:textColor="#6B7280"
                                    android:textSize="12sp"
                                    android:layout_marginStart="8dp"
                                    android:background="@drawable/bottom_nav_background"
                                    android:backgroundTint="#F3F4F6"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="2dp"
                                    android:visibility="gone" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#E5E7EB"
                                android:layout_marginVertical="8dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/total_amount"
                                    android:textColor="#374151"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/total_amount_display"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$0.00"
                                    android:textColor="#1F2937"
                                    android:textSize="24sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/per_person_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Per person: $0.00"
                                android:textColor="#6366F1"
                                android:textSize="14sp"
                                android:gravity="end"
                                android:visibility="gone"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Enhanced Action Chips -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/save_offline_chip"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save Offline"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        app:chipIcon="@drawable/ic_download"
                        app:chipIconTint="#6366F1"
                        app:chipBackgroundColor="#EEF2FF"
                        app:chipStrokeColor="#6366F1"
                        app:chipStrokeWidth="2dp"
                        app:chipCornerRadius="16dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/share_chip"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/share"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        app:chipIcon="@drawable/ic_export"
                        app:chipIconTint="#10B981"
                        app:chipBackgroundColor="#F0FDF4"
                        app:chipStrokeColor="#10B981"
                        app:chipStrokeWidth="2dp"
                        app:chipCornerRadius="16dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/translate_chip"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Translate"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        app:chipIcon="@drawable/ic_globe"
                        app:chipIconTint="#F59E0B"
                        app:chipBackgroundColor="#FEF3C7"
                        app:chipStrokeColor="#F59E0B"
                        app:chipStrokeWidth="2dp"
                        app:chipCornerRadius="16dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Enhanced Content Description Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#EEF2FF"
                            android:layout_marginEnd="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                android:src="@drawable/ic_globe"
                                app:tint="#6366F1" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tipping_guidelines"
                            android:textColor="#1F2937"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/content_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading tipping information..."
                        android:textColor="#4B5563"
                        android:textSize="15sp"
                        android:lineSpacingExtra="6dp"
                        android:lineSpacingMultiplier="1.3" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Enhanced Do's Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="5dp"
                    android:layout_height="28dp"
                    android:background="@drawable/bottom_nav_background"
                    android:backgroundTint="#10B981" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="When to Tip"
                    android:textColor="#065F46"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#ECFDF5"
                app:strokeWidth="2dp"
                app:strokeColor="#86EFAC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/dos_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:clipToPadding="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Enhanced Don'ts Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="5dp"
                    android:layout_height="28dp"
                    android:background="@drawable/bottom_nav_gradient"
                    android:backgroundTint="#EF4444" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="When Not to Tip"
                    android:textColor="#991B1B"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FEF2F2"
                app:strokeWidth="2dp"
                app:strokeColor="#FCA5A5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/donts_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:clipToPadding="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Enhanced Examples Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="5dp"
                    android:layout_height="28dp"
                    android:background="@drawable/bottom_nav_background"
                    android:backgroundTint="#3B82F6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipping Scenarios"
                    android:textColor="#1E40AF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#EFF6FF"
                app:strokeWidth="2dp"
                app:strokeColor="#93C5FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/examples_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:clipToPadding="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Enhanced Progress Indicator -->
    <FrameLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:elevation="20dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ProgressBar
                    style="@style/Widget.Material3.CircularProgressIndicator.Medium"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:indeterminateTint="#6366F1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>



</LinearLayout>
