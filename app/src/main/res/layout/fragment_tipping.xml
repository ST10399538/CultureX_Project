<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <!-- Enhanced Top Bar (Keep existing) -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:id="@+id/top_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp">

                <FrameLayout
                    android:id="@+id/back_arrow"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/ic_globe"
                    android:backgroundTint="@color/white"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_back"
                        app:tint="#1F2937" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="12dp">

                    <TextView
                        android:id="@+id/content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipping Culture"
                        android:textColor="#111827"
                        android:textSize="20sp"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/country_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country"
                        android:textColor="#6B7280"
                        android:textSize="14sp"
                        android:layout_gravity="center" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/favorite_button"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/ic_globe"
                    android:backgroundTint="@color/white"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/favorite_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_bookmark"
                        app:tint="#6B7280" />
                </FrameLayout>
            </LinearLayout>

            <!-- Progress Indicators -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingBottom="8dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_globe"
                    android:backgroundTint="#10B981"
                    android:layout_marginEnd="8dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_globe"
                    android:backgroundTint="#F59E0B"
                    android:layout_marginHorizontal="8dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_globe"
                    android:backgroundTint="#3B82F6"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Main Content Area -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="100dp">

            <!-- Advanced Tipping Calculator Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bottom_nav_background"
                    android:backgroundTint="#000000"
                    android:padding="20dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Quick Tip Calculator"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            />

                        <TextView
                            android:id="@+id/recommended_tip_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recommended: 15%"
                            android:textColor="#B0E0E6"
                            android:textSize="19sp"
                            android:background="@drawable/ic_globe"
                            android:backgroundTint="#20FFFFFF"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp" />
                    </LinearLayout>

                    <!-- Bill Amount Input -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#20FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/currency_symbol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$"
                                android:textColor="@android:color/white"
                                android:textSize="26sp"
                                android:layout_marginEnd="12dp" />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/bill_input"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:hint="Enter bill amount"
                                android:textColorHint="#80FFFFFF"
                                android:textColor="@android:color/white"
                                android:textSize="20sp"
                                android:inputType="numberDecimal"
                                android:singleLine="true" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/clear_button"
                                style="@style/Widget.Material3.Button.IconButton"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                app:icon="@drawable/ic_back_arrow"
                                app:iconTint="@android:color/white"
                                app:iconSize="20dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Split Bill Option -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#10FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_globe"
                                app:tint="@android:color/white"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Split between"
                                android:textColor="#E0E0E0"
                                android:textSize="14sp"
                                />

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/split_input"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bottom_nav_background"
                                android:backgroundTint="#20FFFFFF"
                                android:hint="1"
                                android:gravity="center"
                                android:textColorHint="@color/white"
                                android:textColor="@android:color/white"
                                android:textSize="18sp"
                                android:inputType="number"
                                android:padding="8dp"
                                android:singleLine="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="people"
                                android:textColor="#E0E0E0"
                                android:textSize="18sp"
                                android:layout_marginStart="8dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Tip Percentage Buttons -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Tip Percentage"
                        android:textColor="#E0E0E0"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tip_10"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="10%"
                            android:textSize="16sp"
                            android:textColor="#1F2937"
                            android:backgroundTint="@android:color/white"
                            app:cornerRadius="14dp"
                            android:layout_marginEnd="6dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tip_15"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="15%"
                            android:textSize="16sp"
                            android:textColor="#1F2937"
                            android:backgroundTint="@android:color/white"
                            app:cornerRadius="14dp"
                            android:layout_marginHorizontal="6dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tip_20"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="20%"
                            android:textSize="16sp"
                            android:textColor="#1F2937"
                            android:backgroundTint="@android:color/white"
                            app:cornerRadius="14dp"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                    <!-- Custom Tip Input -->
                    <LinearLayout
                        android:id="@+id/custom_tip_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/custom_tip_input"
                            android:layout_width="80dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bottom_nav_background"
                            android:backgroundTint="#20FFFFFF"
                            android:hint="Custom"
                            android:gravity="center"
                            android:textColorHint="@color/white"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:inputType="number"
                            android:padding="8dp"
                            android:singleLine="true"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:layout_marginEnd="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tip_custom"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Apply Custom"
                            android:textSize="13sp"
                            android:textColor="@android:color/white"
                            app:strokeColor="@android:color/white"
                            app:strokeWidth="1dp"
                            app:cornerRadius="12dp" />
                    </LinearLayout>

                    <!-- Results Display -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Tip Amount -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Tip Amount"
                                    android:textColor="#6B7280"
                                    android:textSize="14sp"
                                    />

                                <TextView
                                    android:id="@+id/tip_amount_display"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$0.00"
                                    android:textColor="#059669"
                                    android:textSize="20sp"
                                    />

                                <TextView
                                    android:id="@+id/percentage_indicator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15%"
                                    android:textColor="#6B7280"
                                    android:textSize="12sp"
                                    android:layout_marginStart="8dp"
                                    android:background="@drawable/bottom_nav_background"
                                    android:backgroundTint="#F3F4F6"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="2dp"
                                    android:visibility="gone" />
                            </LinearLayout>

                            <!-- Divider -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#E5E7EB"
                                android:layout_marginVertical="8dp" />

                            <!-- Total Amount -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Total Amount"
                                    android:textColor="#374151"
                                    android:textSize="16sp"
                                    />

                                <TextView
                                    android:id="@+id/total_amount_display"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$0.00"
                                    android:textColor="#1F2937"
                                    android:textSize="24sp"
                                    />
                            </LinearLayout>

                            <!-- Per Person Amount (shown when split) -->
                            <TextView
                                android:id="@+id/per_person_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Per person: $0.00"
                                android:textColor="#6366F1"
                                android:textSize="14sp"
                                android:gravity="end"
                                android:visibility="gone"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Chips (existing) -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/save_offline_chip"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save Offline"
                        app:chipIcon="@drawable/ic_download"
                        app:chipIconTint="#6366F1"
                        app:chipBackgroundColor="#EEF2FF"
                        app:chipStrokeColor="#6366F1"
                        app:chipStrokeWidth="1dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/share_chip"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share"
                        app:chipIcon="@drawable/ic_export"
                        app:chipIconTint="#10B981"
                        app:chipBackgroundColor="#F0FDF4"
                        app:chipStrokeColor="#10B981"
                        app:chipStrokeWidth="1dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/translate_chip"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Translate"
                        app:chipIcon="@drawable/ic_globe"
                        app:chipIconTint="#F59E0B"
                        app:chipBackgroundColor="#FEF3C7"
                        app:chipStrokeColor="#F59E0B"
                        app:chipStrokeWidth="1dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Rest of the existing content sections -->
            <!-- Content Description Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E7EB">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_globe"
                            app:tint="#6366F1"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipping Guidelines"
                            android:textColor="#1F2937"
                            android:textSize="16sp"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/content_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading tipping information..."
                        android:textColor="#4B5563"
                        android:textSize="14sp"
                        android:lineSpacingExtra="6dp"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Keep the rest of your existing layout for Do's, Don'ts, and Examples sections -->
            <!-- Do's Section with Icons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="When to Tip"
                android:textColor="#059669"
                android:textSize="17sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="12dp"
                android:drawableStart="@drawable/ic_globe"
                android:drawablePadding="8dp"
                app:drawableTint="#059669" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#DCFCE7"
                app:strokeWidth="1dp"
                app:strokeColor="#86EFAC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/dos_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="20dp"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Don'ts Section with Icons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="When Not to Tip"
                android:textColor="#DC2626"
                android:textSize="17sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="12dp"
                android:drawableStart="@drawable/ic_globe"
                android:drawablePadding="8dp"
                app:drawableTint="#DC2626" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FEE2E2"
                app:strokeWidth="1dp"
                app:strokeColor="#FCA5A5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/donts_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="20dp"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Examples Section with Icons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipping Scenarios"
                android:textColor="#1E40AF"
                android:textSize="17sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="12dp"
                android:drawableStart="@drawable/ic_light_mode"
                android:drawablePadding="8dp"
                app:drawableTint="#3B82F6" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#cfe2f3"
                app:strokeWidth="1dp"
                app:strokeColor="#3d85c6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/examples_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Progress Indicator -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="#6366F1"
        android:visibility="gone" />

</LinearLayout>