<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <!-- Header Section with Gradient -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/gradient_peach_background"
                android:paddingBottom="30dp">

                <!-- Top Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="24dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#80FFFFFF">

                        <ImageView
                            android:id="@+id/back_arrow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:src="@drawable/ic_arrow_back"
                            app:tint="#1F2937"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackgroundBorderless" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Privacy Policy"
                        android:textColor="#1F2937"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                </LinearLayout>

                <!-- Privacy Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardCornerRadius="35dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="@android:color/white">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_police"
                            app:tint="#6366F1" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </RelativeLayout>

            <!-- Content Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="-20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Last Updated -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Updated: October 2, 2025"
                        android:textColor="#9CA3AF"
                        android:textSize="12sp"
                        android:layout_marginBottom="20dp" />

                    <!-- Introduction -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Introduction"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Welcome to CultureX. We are committed to protecting your privacy and ensuring the security of your personal information. This Privacy Policy explains how we collect, use, disclose, and safeguard your information when you use our cultural etiquette and travel application."
                        android:textColor="#4B5563"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp" />

                    <!-- Information We Collect -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. Information We Collect"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Personal Information"
                        android:textColor="#374151"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Account information (name, email address, phone number)\n• Profile details (display name, profile picture)\n• Login credentials\n• Language preferences and settings"
                        android:textColor="#4B5563"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Usage Information"
                        android:textColor="#374151"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Countries and cultural content you view\n• Saved etiquette guides and bookmarked information\n• Travel itineraries and plans\n• App usage patterns and preferences\n• Device information and operating system"
                        android:textColor="#4B5563"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp" />

                    <!-- How We Use Your Information -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2. How We Use Your Information"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We use the collected information to:\n\n• Provide and maintain our cultural etiquette services\n• Personalize your experience with relevant cultural content\n• Save your travel itineraries and preferences\n• Send important notifications about travel alerts or updates\n• Improve our app features and user experience\n• Ensure the security of your account\n• Respond to your inquiries and provide customer support"
                        android:textColor="#4B5563"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp" />

                    <!-- Data Security -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3. Data Security"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We implement industry-standard security measures to protect your personal information:\n\n• Encrypted data transmission using SSL/TLS\n• Secure authentication with optional biometric login\n• Regular security audits and updates\n• Limited access to personal data by authorized personnel only\n• Secure cloud storage with encrypted backups"
                        android:textColor="#4B5563"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp" />

                    <!-- Data Sharing -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4. Information Sharing"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We do not sell, trade, or rent your personal information to third parties. We may share your information only in the following circumstances:\n\n• With your explicit consent\n• To comply with legal obligations or court orders\n• To protect the rights, property, or safety of CultureX, our users, or the public\n• With service providers who assist in operating our app (under strict confidentiality agreements)"
                        android:textColor="#4B5563"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp" />

                    <!-- Your Rights -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5. Your Privacy Rights"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You have the right to:\n\n• Access your personal data\n• Correct inaccurate information\n• Request deletion of your account and data\n• Export your data in a portable format\n• Opt-out of marketing communications\n• Disable biometric authentication\n• Control notification preferences"
                        android:textColor="#4B5563"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp" />

                    <!-- Data Retention -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6. Data Retention"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We retain your personal information only for as long as necessary to provide our services and fulfill the purposes outlined in this policy. When you delete your account, we will remove your personal data within 30 days, except where we are required to retain it for legal compliance."
                        android:textColor="#4B5563"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp" />

                    <!-- Children's Privacy -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7. Children's Privacy"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CultureX is intended for users aged 13 and above. We do not knowingly collect personal information from children under 13. If we become aware that we have collected such information, we will take steps to delete it promptly."
                        android:textColor="#4B5563"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp" />

                    <!-- Changes to Policy -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8. Changes to This Policy"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We may update this Privacy Policy from time to time. We will notify you of any significant changes by posting the new policy in the app and updating the 'Last Updated' date. Your continued use of CultureX after changes constitutes acceptance of the updated policy."
                        android:textColor="#4B5563"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp" />

                    <!-- Contact Information -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9. Contact Us"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="If you have questions or concerns about this Privacy Policy or our data practices, please contact us:"
                        android:textColor="#4B5563"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Contact Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeColor="#E5E7EB"
                        app:strokeWidth="1dp"
                        app:cardBackgroundColor="#F9FAFB">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email: privacy@culturex.com"
                                android:textColor="#374151"
                                android:textSize="14sp"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address: Pretoria, Gauteng, South Africa"
                                android:textColor="#374151"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Agreement Notice -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#EEF2FF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_shield"
                        app:tint="#6366F1"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="By using CultureX, you agree to this Privacy Policy and our Terms of Service."
                        android:textColor="#4338CA"
                        android:textSize="13sp"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

