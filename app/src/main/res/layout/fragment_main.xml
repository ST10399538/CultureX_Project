<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Top Navigation Bar with Enhanced Design -->
    <LinearLayout
        android:id="@+id/top_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="48dp"
        android:paddingBottom="16dp"
        android:elevation="4dp">

        <!-- Profile Icon with Enhanced Background -->
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_profile"
            android:background="@drawable/nav_icon_background"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Profile" />

        <!-- Home Title with Better Typography -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CultureX"
            android:textColor="#1F2937"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.01" />

        <!-- Search Icon with Enhanced Background -->
        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_search"
            android:background="@drawable/nav_icon_background"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Search" />

    </LinearLayout>

    <!-- Main Content Area with Better Scrolling -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_nav"
        android:layout_above="@id/bottom_nav"
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:clipToPadding="false">

            <!-- Welcome Message Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore Cultural Insights"
                android:textColor="#374151"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="20dp"
                android:alpha="0.9" />

            <!-- Country Selection Card with Enhanced Design -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Icon and Title Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <!-- Globe Icon Placeholder -->
                        <View
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/nav_icon_background"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select Destination"
                                android:textColor="#111827"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Choose a country to explore"
                                android:textColor="#6B7280"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Enhanced Spinner Dropdown -->
                    <Spinner
                        android:id="@+id/country_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/country_selector_background"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:spinnerMode="dropdown"
                        android:elevation="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Cultural Categories Section Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cultural Categories"
                android:textColor="#374151"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp" />

            <!-- About the Country Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/about_country_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#EFF6FF"
                app:strokeWidth="2dp"
                app:strokeColor="#93C5FD"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:id="@+id/aboutCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸŒ"
                        android:textSize="28sp"
                        android:gravity="center"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About the Country"
                            android:textColor="#1E40AF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Geography, history, and demographics"
                            android:textColor="#60A5FA"
                            android:textSize="13sp"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#60A5FA" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Menu Items Card with Enhanced Styling -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">

                    <!-- Dress Code -->
                    <LinearLayout
                        android:id="@+id/menu_dress_code"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:background="@drawable/menu_item_ripple"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="24dp"
                        android:clickable="true"
                        android:focusable="true">

                        <!-- Icon Placeholder -->
                        <View
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/nav_icon_background"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dress Code"
                                android:textColor="#111827"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Attire guidelines and norms"
                                android:textColor="#6B7280"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="#9CA3AF" />

                    </LinearLayout>

                    <!-- Subtle Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3F4F6"
                        android:layout_marginHorizontal="24dp" />

                    <!-- Communication Style -->
                    <LinearLayout
                        android:id="@+id/menu_communication"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:background="@drawable/menu_item_ripple"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="24dp"
                        android:clickable="true"
                        android:focusable="true">

                        <!-- Icon Placeholder -->
                        <View
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/nav_icon_background"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Communication Style"
                                android:textColor="#111827"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Verbal and non-verbal cues"
                                android:textColor="#6B7280"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="#9CA3AF" />

                    </LinearLayout>

                    <!-- Subtle Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3F4F6"
                        android:layout_marginHorizontal="24dp" />

                    <!-- Greetings -->
                    <LinearLayout
                        android:id="@+id/menu_greetings"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:background="@drawable/menu_item_ripple"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="24dp"
                        android:clickable="true"
                        android:focusable="true">

                        <!-- Icon Placeholder -->
                        <View
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/nav_icon_background"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Greetings"
                                android:textColor="#111827"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Proper greeting customs"
                                android:textColor="#6B7280"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="#9CA3AF" />

                    </LinearLayout>

                    <!-- Subtle Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3F4F6"
                        android:layout_marginHorizontal="24dp" />

                    <!-- Etiquette -->
                    <LinearLayout
                        android:id="@+id/menu_etiquette"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:background="@drawable/menu_item_ripple"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="24dp"
                        android:clickable="true"
                        android:focusable="true">

                        <!-- Icon Placeholder -->
                        <View
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/nav_icon_background"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Etiquette"
                                android:textColor="#111827"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Social customs and manners"
                                android:textColor="#6B7280"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="#9CA3AF" />

                    </LinearLayout>

                    <!-- Subtle Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3F4F6"
                        android:layout_marginHorizontal="24dp" />

                    <!-- Tipping Norms -->
                    <LinearLayout
                        android:id="@+id/menu_tipping"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:background="@drawable/menu_item_ripple"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="24dp"
                        android:clickable="true"
                        android:focusable="true">

                        <!-- Icon Placeholder -->
                        <View
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/nav_icon_background"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tipping Norms"
                                android:textColor="#111827"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gratuity practices and amounts"
                                android:textColor="#6B7280"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="#9CA3AF" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Bottom Spacing for Scroll -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Bar with Enhanced Design -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_nav_background"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="8dp"
        android:elevation="12dp">

        <!-- Emergency -->
        <LinearLayout
            android:id="@+id/nav_emergency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_emergency"
                app:tint="#EF4444"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency"
                android:textColor="#EF4444"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Home -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_home"
                app:tint="#3B82F6"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#3B82F6"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Saved -->
        <LinearLayout
            android:id="@+id/nav_saved"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_bookmark"
                app:tint="#6B7280"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saved"
                android:textColor="#6B7280"
                android:textSize="11sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Notifications -->
        <LinearLayout
            android:id="@+id/nav_notifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_notifications"
                app:tint="#6B7280"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alerts"
                android:textColor="#6B7280"
                android:textSize="11sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

