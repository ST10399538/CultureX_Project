<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- Splash Screen -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.culturex.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Login Screen -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.culturex.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_login_to_signup"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_login_to_onboarding"
            app:destination="@id/onboardingFragment" />
    </fragment>

    <!-- Signup Screen -->
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.culturex.SignupFragment"
        android:label="SignupFragment">
        <action
            android:id="@+id/action_signup_to_onboarding"
            app:destination="@id/onboardingFragment" />
    </fragment>

    <!-- Onboarding Screen -->
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.culturex.OnboardingFragment"
        android:label="OnboardingFragment">
        <action
            android:id="@+id/action_onboarding_to_main"
            app:destination="@id/mainFragment" />
    </fragment>

    <!-- Main Screen -->
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.culturex.MainFragment"
        android:label="MainFragment" />
</navigation>
