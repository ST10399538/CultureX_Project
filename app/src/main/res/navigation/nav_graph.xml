<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- Splash Screen -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.culturex.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Login Screen -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.culturex.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_login_to_signup"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_login_to_onboarding"
            app:destination="@id/onboardingFragment" />
    </fragment>

    <!-- Signup Screen -->
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.culturex.SignupFragment"
        android:label="SignupFragment">
        <action
            android:id="@+id/action_signup_to_biometric_setup"
            app:destination="@id/biometricSetupFragment" />
        <action
            android:id="@+id/action_signup_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Biometric Setup Screen -->
    <fragment
        android:id="@+id/biometricSetupFragment"
        android:name="com.example.culturex.BiometricSetupFragment"
        android:label="BiometricSetupFragment">
        <action
            android:id="@+id/action_biometric_setup_to_main"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_biometric_setup_to_onboarding"
            app:destination="@id/onboardingFragment" />
        <action
            android:id="@+id/action_biometric_setup_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Onboarding Screen -->
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.culturex.OnboardingFragment"
        android:label="OnboardingFragment">
        <action
            android:id="@+id/action_onboarding_to_main"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Main Screen -->
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.culturex.MainFragment"
        android:label="MainFragment">
        <!-- Cultural Content Actions -->
        <action
            android:id="@+id/action_main_to_dressCodeFragment"
            app:destination="@id/dressCodeFragment" />
        <action
            android:id="@+id/action_main_to_communicationFragment"
            app:destination="@id/communicationFragment" />
        <action
            android:id="@+id/action_main_to_greetingsFragment"
            app:destination="@id/greetingsFragment" />
        <action
            android:id="@+id/action_main_to_etiquetteFragment"
            app:destination="@id/etiquetteFragment" />
        <action
            android:id="@+id/action_main_to_tippingFragment"
            app:destination="@id/tippingFragment" />
        <!-- Bottom Navigation Actions -->
        <action
            android:id="@+id/action_main_to_savedFragment"
            app:destination="@id/savedFragment" />
        <action
            android:id="@+id/action_main_to_notificationsFragment"
            app:destination="@id/notificationsFragment" />
        <action
            android:id="@+id/action_main_to_emergencyFragment"
            app:destination="@id/emergencyFragment" />
        <!-- Top Navigation Actions -->
        <action
            android:id="@+id/action_main_to_editProfile"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_main_to_touristAttractions"
            app:destination="@id/touristAttractionsFragment" />
    </fragment>

    <!-- Edit Profile Fragment -->
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.culturex.EditProfileFragment"
        android:label="Edit Profile" />

    <!-- Tourist Attractions Fragment -->
    <fragment
        android:id="@+id/touristAttractionsFragment"
        android:name="com.example.culturex.TouristAttractionsFragment"
        android:label="Tourist Attractions" />

    <!-- Settings Fragment -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.culturex.SettingsFragment"
        android:label="Settings" />

    <!-- Cultural Content Fragments -->
    <fragment
        android:id="@+id/dressCodeFragment"
        android:name="com.example.culturex.DressCodeFragment"
        android:label="DressCodeFragment" />

    <fragment
        android:id="@+id/communicationFragment"
        android:name="com.example.culturex.CommunicationFragment"
        android:label="CommunicationFragment" />

    <fragment
        android:id="@+id/greetingsFragment"
        android:name="com.example.culturex.GreetingsFragment"
        android:label="GreetingsFragment" />

    <fragment
        android:id="@+id/etiquetteFragment"
        android:name="com.example.culturex.EtiquetteFragment"
        android:label="EtiquetteFragment" />

    <fragment
        android:id="@+id/tippingFragment"
        android:name="com.example.culturex.TippingFragment"
        android:label="TippingFragment" />

    <!-- Utility Fragments -->
    <fragment
        android:id="@+id/savedFragment"
        android:name="com.example.culturex.SavedFragment"
        android:label="Saved" />

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.example.culturex.NotificationsFragment"
        android:label="Notifications" />

    <fragment
        android:id="@+id/emergencyFragment"
        android:name="com.example.culturex.EmergencyFragment"
        android:label="Emergency" />

</navigation>