<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- Splash Screen -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.culturex.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_splash_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Login Screen -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.culturex.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_login_to_signup"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_login_to_onboarding"
            app:destination="@id/onboardingFragment" />
    </fragment>

    <!-- Signup Screen -->
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.culturex.SignupFragment"
        android:label="SignupFragment">
        <action
            android:id="@+id/action_signup_to_onboarding"
            app:destination="@id/onboardingFragment" />
        <action
            android:id="@+id/action_signup_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Onboarding Screen -->
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.culturex.OnboardingFragment"
        android:label="OnboardingFragment">
        <action
            android:id="@+id/action_onboarding_to_main"
            app:destination="@id/mainFragment" />
    </fragment>

    <!-- Main Screen -->
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.culturex.MainFragment"
        android:label="MainFragment">

        <!-- Actions from MainFragment to other screens -->
        <action
            android:id="@+id/action_main_to_dressCodeFragment"
            app:destination="@id/dressCodeFragment" />
        <action
            android:id="@+id/action_main_to_communicationFragment"
            app:destination="@id/communicationFragment" />
        <action
            android:id="@+id/action_main_to_greetingsFragment"
            app:destination="@id/greetingsFragment" />
        <action
            android:id="@+id/action_main_to_etiquetteFragment"
            app:destination="@id/etiquetteFragment" />
        <action
            android:id="@+id/action_main_to_tippingFragment"
            app:destination="@id/tippingFragment" />

        <!-- Bottom nav actions -->
        <action
            android:id="@+id/action_main_to_savedFragment"
            app:destination="@id/savedFragment" />
        <action
            android:id="@+id/action_main_to_notificationsFragment"
            app:destination="@id/notificationsFragment" />
        <action
            android:id="@+id/action_main_to_emergencyFragment"
            app:destination="@id/emergencyFragment" />
    </fragment>

    <!-- Other fragments -->
    <fragment
        android:id="@+id/dressCodeFragment"
        android:name="com.example.culturex.DressCodeFragment"
        android:label="DressCodeFragment" />

    <fragment
        android:id="@+id/communicationFragment"
        android:name="com.example.culturex.CommunicationFragment"
        android:label="CommunicationFragment" />

    <fragment
        android:id="@+id/greetingsFragment"
        android:name="com.example.culturex.GreetingsFragment"
        android:label="GreetingsFragment" />

    <fragment
        android:id="@+id/etiquetteFragment"
        android:name="com.example.culturex.EtiquetteFragment"
        android:label="EtiquetteFragment" />

    <fragment
        android:id="@+id/tippingFragment"
        android:name="com.example.culturex.TippingFragment"
        android:label="TippingFragment" />

    <fragment
        android:id="@+id/savedFragment"
        android:name="com.example.culturex.SavedFragment"
        android:label="Saved" />

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.example.culturex.NotificationsFragment"
        android:label="Notifications" />

    <fragment
        android:id="@+id/emergencyFragment"
        android:name="com.example.culturex.EmergencyFragment"
        android:label="Emergency" />
</navigation>
